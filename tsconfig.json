{
    "compilerOptions": {
        "target": "ESNext",
        "baseUrl": ".",
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
    },
    "include": [
        "tests/*.ts",
        "packages/**/*.ts",
        "scripts/*.ts",
        "wasmup.config.ts"
    ]
}
